{
  "name": "lemon-bluu",
  "private": true,
  "workspaces": [
    "apps/*",
    "apps/bots/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=@lemon-bluu/web",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "latest",
    "turbo": "latest"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18"
  },
  "resolutions": {
    "tar": ">=7.5.7",
    "undici": ">=6.23.0"
  },
  "lint-staged": {
    "apps/bots/takoyaki/src/**/*.ts": "eslint --fix",
    "apps/bots/kaiju-keeper/src/**/*.ts": "eslint --fix",
    "apps/bots/fetcher-bee/src/**/*.ts": "eslint --fix",
    "apps/bots/bot-template/src/**/*.ts": "eslint --fix",
    "packages/discord/src/**/*.ts": "eslint --fix",
    "packages/ui/src/**/*.{ts,tsx}": "eslint --fix",
    "apps/web/**/*.{ts,tsx}": "eslint --fix"
  }
}
