{
  "name": "@lemon-bluu/fetcher-bee",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "NODE_ENV=development & nodemon -r tsconfig-paths/register --files src/index.ts | pino-pretty -i pid,hostname - t 'yyyy-mm-dd HH:MM:ss'",
    "start:built": "node -r tsconfig-paths/register build/index.js",
    "start:dev": "NODE_ENV=development & nodemon -r tsconfig-paths/register --files src/index.ts | pino-pretty -i pid,hostname - t 'yyyy-mm-dd HH:MM:ss'",
    "start:prod": "ts-node -r tsconfig-paths/register --files src/index.ts",
    "start:restart": "while true; do npm run start:prod; echo 'Bot crashed, restarting in 5 seconds...'; sleep 5; done",
    "start:prod-watch": "nodemon -r tsconfig-paths/register --files src/index.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "patch-package": "patch-package",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@lemon-bluu/discord": "*",
    "@discordjs/rest": "^2.2.0",
    "@google/genai": "^1.43.0",
    "@keyv/sqlite": "^4.0.5",
    "axios": "^1.12.0",
    "canvas": "^3.2.0",
    "cron": "^4.4.0",
    "discord.js": "^14.19.3",
    "dotenv": "^17.3.1",
    "lodash": "^4.17.21",
    "sharp": "^0.34.4",
    "tsc-alias": "^1.8.11"
  },
  "devDependencies": {
    "@lemon-bluu/eslint-config": "*",
    "@types/lodash": "^4.17.0",
    "@types/node": "^25.3.2",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "nodemon": "^3.0.2",
    "patch-package": "^8.0.0",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "postinstall-postinstall": "^2.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ignore": [
      "build/*",
      ".vscode/*"
    ],
    "delay": "2500"
  }
}
